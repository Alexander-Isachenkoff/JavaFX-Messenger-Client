<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.MessagesController"
      spacing="10">
    <padding>
        <Insets top="10" bottom="10" left="10" right="10"/>
    </padding>

    <TextArea prefWidth="320" prefHeight="60" wrapText="true" maxWidth="Infinity" maxHeight="Infinity"
              VBox.vgrow="ALWAYS"/>

    <HBox alignment="BOTTOM_CENTER" VBox.vgrow="ALWAYS">
        <Button text="Отправить" prefWidth="80" onAction="#onSend"/>
    </HBox>

</VBox>
