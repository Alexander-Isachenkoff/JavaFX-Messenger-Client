<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="321.0" prefWidth="478.0" spacing="10.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="messager.controller.SettingsController">
    <children>
        <VBox alignment="CENTER" fillWidth="false" VBox.vgrow="ALWAYS">
            <children>
                <VBox fillWidth="false" spacing="5.0">
                    <children>
                        <VBox maxWidth="-Infinity" spacing="1.0">
                            <children>
                                <Label text="IP адрес сервера" />
                                <HBox spacing="10.0">
                                    <children>
                                        <TextField fx:id="ipField" prefWidth="250.0" />
                                        <Button fx:id="searchButton" mnemonicParsing="false" onAction="#onSearch" text="Поиск" />
                              <ProgressIndicator fx:id="progress" prefHeight="25.0" prefWidth="25.0" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                        <VBox maxWidth="-Infinity" spacing="1.0">
                            <children>
                                <Label text="Порт сервера" />
                                <TextField fx:id="portField" editable="false" prefWidth="250.0" text="11111" />
                            </children>
                        </VBox>
                        <VBox maxWidth="-Infinity" spacing="1.0">
                            <children>
                                <Label text="Таймаут ожидания подключения к серверу" wrapText="true" />
                                <TextField fx:id="connectionField" prefWidth="250.0" />
                            </children>
                        </VBox>
                        <VBox maxWidth="-Infinity" spacing="1.0">
                            <children>
                                <Label text="Таймаут ожидания ответа от сервера" wrapText="true" />
                                <TextField fx:id="responseField" prefWidth="250.0" />
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </VBox>
        <HBox alignment="BOTTOM_RIGHT" spacing="10.0">
            <children>
                <VBox fx:id="statusVbox" alignment="BOTTOM_LEFT" minHeight="-Infinity" prefHeight="40.0" prefWidth="100.0" HBox.hgrow="ALWAYS" />
                <Button mnemonicParsing="false" onAction="#onCheck" text="Диагностика" />
                <Button mnemonicParsing="false" onAction="#onSave" text="Сохранить" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
