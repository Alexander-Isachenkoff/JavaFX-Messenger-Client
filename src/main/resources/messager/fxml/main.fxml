<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="720" prefWidth="1200" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="messager.controller.MainController">
    <children>
        <HBox alignment="TOP_RIGHT" spacing="10.0">
            <children>
                <Button mnemonicParsing="false" onAction="#onSignIn" styleClass="menu-button" text="Вход">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>
                <Button mnemonicParsing="false" onAction="#onSignUp" styleClass="menu-button" text="Регистрация">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font></Button>
            <Button mnemonicParsing="false" onAction="#onSettings" styleClass="menu-button" text="Настройки">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            </children>
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </padding>
        </HBox>
        <TabPane fx:id="tabPane" tabClosingPolicy="ALL_TABS" tabMaxWidth="200.0" tabMinWidth="80.0" VBox.vgrow="ALWAYS">
         <tabs>
            <Tab text="Untitled Tab">
              <content>
                <AnchorPane />
              </content>
            </Tab>
            <Tab text="Untitled Tab">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
              </content>
            </Tab>
         </tabs></TabPane>
    </children>
</VBox>
