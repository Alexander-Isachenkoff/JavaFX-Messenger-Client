<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox alignment="BOTTOM_RIGHT" prefHeight="250.0" prefWidth="450.0" stylesheets="@../css/style.css"
      xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="messager.controller.SignInController">
    <children>
        <VBox alignment="CENTER" fillWidth="false" spacing="10" VBox.vgrow="ALWAYS">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>

            <GridPane hgap="8" vgap="8">
                <Label minWidth="-Infinity" text="Имя" GridPane.rowIndex="0"/>
                <Label minWidth="-Infinity" text="Пароль" GridPane.rowIndex="1"/>
                <TextField fx:id="nameField" prefWidth="200.0" promptText="Имя" GridPane.columnIndex="1"
                           GridPane.hgrow="ALWAYS" GridPane.rowIndex="0"/>
                <TextField fx:id="passwordField" prefWidth="200.0" promptText="Пароль" GridPane.columnIndex="1"
                           GridPane.hgrow="ALWAYS" GridPane.rowIndex="1"/>
                <columnConstraints>
                    <ColumnConstraints/>
                    <ColumnConstraints fillWidth="false"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints/>
                    <RowConstraints/>
                </rowConstraints>
            </GridPane>
            <Button onAction="#onSignIn" prefWidth="70" text="Войти"/>
            <Label fx:id="responseLabel" text="Label"/>

        </VBox>
        <Button disable="true" onAction="#onSignIn" text="Регистрация"/>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</VBox>
