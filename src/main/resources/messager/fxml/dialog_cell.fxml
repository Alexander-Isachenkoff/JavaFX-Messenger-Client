<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>
<HBox fillHeight="false" spacing="8.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="messager.controller.DialogCellController">
    <children>
        <Circle fx:id="imageCircle" radius="18.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0"/>
        <VBox HBox.hgrow="ALWAYS">
            <children>
                <HBox spacing="10.0">
                    <children>
                        <Label fx:id="dialogTitle" text="Имя Пользователя">
                            <font>
                                <Font name="System Bold" size="12.0"/>
                            </font>
                        </Label>
                        <HBox alignment="TOP_RIGHT" HBox.hgrow="ALWAYS">
                            <children>
                                <Button mnemonicParsing="false" onAction="#onDelete" prefHeight="20.0" prefWidth="20.0"
                                        styleClass="tool-button">
                                    <graphic>
                                        <Group>
                                            <children>
                                                <Line endX="8.0" styleClass="line"/>
                                            </children>
                                        </Group>
                                    </graphic>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </HBox>
                <HBox alignment="BOTTOM_RIGHT" spacing="8.0">
                    <children>
                        <Label fx:id="messageTextLabel" alignment="TOP_LEFT" maxHeight="-Infinity"
                               maxWidth="1.7976931348623157E308" prefHeight="34.0" text="Привет" wrapText="true"
                               HBox.hgrow="ALWAYS"/>
                        <Label fx:id="timeLabel" minWidth="-Infinity" text="10:30" textFill="GREY"/>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
    <padding>
        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
    </padding>
</HBox>
