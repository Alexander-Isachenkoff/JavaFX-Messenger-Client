<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<HBox prefHeight="540.0" prefWidth="640.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="messager.controller.MessagesController">
    <children>
        <SplitPane styleClass="dialogs-split-pane" HBox.hgrow="ALWAYS">
            <items>
                <ListView fx:id="usersList" styleClass="users-list" SplitPane.resizableWithParent="false"/>
                <SplitPane orientation="VERTICAL" styleClass="chat-split-pane">
                    <items>
                        <ListView fx:id="messagesList" styleClass="messages-list"/>
                        <VBox alignment="TOP_RIGHT" spacing="10.0" SplitPane.resizableWithParent="false">
                            <children>

                                <TextArea fx:id="textArea" prefHeight="62" maxHeight="1.7976931348623157E308"
                                          maxWidth="1.7976931348623157E308" minHeight="34.0" promptText="Сообщение"
                                          wrapText="true" VBox.vgrow="ALWAYS"/>
                                <Button onAction="#onSend" prefWidth="80" text="Отправить"/>
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </VBox>
                    </items>
                </SplitPane>
            </items>
        </SplitPane>
    </children>
</HBox>
