<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<HBox alignment="BOTTOM_RIGHT" fillHeight="false" prefWidth="340.0" spacing="10.0"
      style="-fx-background-radius: 15; -fx-background-color: #CEF;" stylesheets="@../css/style.css"
      xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="messager.controller.MessageCellController">
    <children>
        <VBox spacing="5.0" HBox.hgrow="ALWAYS">
            <children>
                <Label fx:id="userNameLabel" text="Имя Пользователя">
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Label>
                <StackPane>
                    <children>
                        <TextArea fx:id="messageTextArea" editable="false" prefHeight="17.0"
                                  styleClass="message-text-area"
                                  text="Сообщение Сообщение  Сообщение  Сообщение Сообщение  Сообщение  Сообщение Сообщение Конец"
                                  wrapText="true"/>
                        <Label fx:id="textLabel" lineSpacing="0.6"
                               text="Сообщение Сообщение  Сообщение  Сообщение Сообщение  Сообщение  Сообщение Сообщение Конец"
                               visible="false" wrapText="true"/>
                    </children>
                </StackPane>
            </children>
        </VBox>
        <Label fx:id="timeLabel" minWidth="-Infinity" text="10:30" textFill="GREY"/>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</HBox>
