<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>
<VBox fillWidth="false" styleClass="my_message" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="messager.controller.MessageCellController">
    <children>
        <HBox alignment="BOTTOM_RIGHT" fillHeight="false" maxWidth="500.0" spacing="10.0" styleClass="message">
            <children>
                <HBox spacing="8.0" HBox.hgrow="ALWAYS">
                    <children>
                        <Circle fx:id="imageCircle" radius="16.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0"/>
                        <VBox>
                            <children>
                                <Label fx:id="userNameLabel" text="Имя Пользователя">
                                    <font>
                                        <Font name="System Bold" size="12.0"/>
                                    </font>
                                </Label>
                                <StackPane>
                                    <children>
                                        <TextArea fx:id="messageTextArea" editable="false" prefHeight="17.0"
                                                  styleClass="message-text-area"
                                                  text="Сообщение Сообщение  Сообщение  Сообщение Сообщение  Сообщение  Сообщение Сообщение Конец"
                                                  wrapText="true"/>
                                        <Label fx:id="textLabel" lineSpacing="0.6"
                                               text="Сообщение Сообщение  Сообщение  Сообщение Сообщение  Сообщение  Сообщение Сообщение Конец"
                                               visible="false" wrapText="true"/>
                                    </children>
                                </StackPane>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <Label fx:id="timeLabel" minWidth="-Infinity" text="10:30" textFill="GREY"/>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </HBox>
    </children>
</VBox>
